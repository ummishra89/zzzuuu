<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp40"
    android:background="@drawable/rounded_corner_interest_transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp10"
        android:paddingTop="@dimen/dp10">

        <com.mentorz.customviews.CustomTextView
            style="@style/TextStyleMedium.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/com_facebook_send_button_text" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp6"
            android:src="@drawable/tick" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:background="@drawable/circle_add">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/add1" />
    </FrameLayout>
</LinearLayout>